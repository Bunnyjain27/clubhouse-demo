{
    "app-id": "com.endlessm.Clubhouse",
    "runtime": "com.endlessm.apps.Platform",
    "runtime-version": "5",
    "sdk": "com.endlessm.apps.Sdk",
    "command": "eos-clubhouse",
    "rename-desktop-file": "eos-clubhouse.desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--own-name=com.endlessm.Clubhouse",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "clubhouse",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dsession-bus-services-dir=/app/share/dbus-1/services"
            ],
            "sources": [
                {
                    "type": "git",
                    "path": ".",
                    "branch": "@GIT_CLONE_BRANCH@"
                }
            ]
        }
    ]
}

